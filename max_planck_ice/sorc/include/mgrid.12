      PARAMETER (dlonm  = 1.0     )
      PARAMETER (dtm    = 12.*3600.)
      PARAMETER (nwave  = 170      )
      PARAMETER (mwave  = (nwave+1)*(nwave+2))
      PARAMETER (kdim   = 28       )
