#------------------------------------------------------------------------------
#                          -- Define suffix rule --
#------------------------------------------------------------------------------
 
.SUFFIXES:
.SUFFIXES: .cpp .c .f .f90 .o .ln
.f.o:
	$(FC) $(FC_FLAGS) $(INCLUDES) -c $<

.f90.o:
	$(FC90) $(FC90_FLAGS) $(INCLUDES) -c $<

.c.o:
	$(CC) $(CC_FLAGS) $(INCLUDES) -c $<

.cpp.o:
	$(CXX) $(CXX_FLAGS) $(INCLUDES) -c $<
